<div class="flex flex-col gap-2">
  <label for="<%= field.name %>">
    <%= field.name %>
    <% if field.required %>
      <span class="text-red-600">*</span>
    <% end %>
  </label>
  <input
    type="email"
    name="<%= field.name %>"
    id="<%= field.name %>"
    class="px-2 py-1 border border-gray-400 rounded"
    <%= field.required ? "required" : "" %><% if value %>
    value="<%= value %>"
    <% end %>
  >
  </div>
