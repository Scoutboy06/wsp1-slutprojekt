<div class="flex flex-col gap-2">
  <label :for="field.name" x-text="field.name">
    <span class="text-red-600" x-show="field.required">*</span>
  </label>
  <input
    type="text"
    :name="field.name"
    :id="field.name"
    class="px-2 py-1 border border-gray-400 rounded"
    :value="mode == 'edit' ? @entry[field.name] : ''"
    :required="field.required"
  >
  </div>
