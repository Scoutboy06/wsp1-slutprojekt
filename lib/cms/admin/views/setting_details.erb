<header class="flex items-center w-full gap-6 px-4 py-2 border-b border-black">
  <p class="text-2xl"><%= @setting.name %></p>
  <button
    class="p-1 border border-black rounded-full cursor-pointer aspect-square"
    aria-label="Create new entry"
  >
    <i class="icon">add</i>
  </button>
</header>

<div class="flex flex-col h-full gap-8 px-8 py-8 overflow-y-auto">
  <form>
    <input
      name="q"
      placeholder="Search..."
      class="w-full px-3 py-1 border border-black"
    >
    </form>

    <table>
      <thead>
        <tr>
          <th>
            <input type="checkbox">
          </td>
          <% @setting.fields.each do |field| %>
            <th><%= field.name %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div>